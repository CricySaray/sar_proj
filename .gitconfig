[user]
	name = cricy
	email = cricysaray@qq.com
[alias]
	f = fetch proj
	back = restore --stage
	chi = check-ignore -v # check ignored file status
	re = remote
	ls = ls-files
	a = add
	aa = add --all
	st = status
  s = status -s         # git st 等价于 git status
  c = commit -m
	mo = commit --amend -m
  co = checkout
  br = branch
	df = diff --color
	ds = diff --color --stat
	lg = !git --no-pager log --oneline --decorate --graph --date=relative -10
	tt = !git --no-pager log --all --graph --decorate --oneline --date=relative
  tree = log --all --graph --decorate --oneline
  p = push --set-upstream proj main
  cleanup = !git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d
	h = help
[color]
  ui = auto           # 自动着色
  branch = auto
  diff = auto
  status = auto
[color "diff"]
  meta = yellow bold  # 元数据（如 @@ -1,3 +1,4 @@）
  frag = magenta bold # 片段分隔符
  old = red           # 删除的行
  new = green         # 新增的行
[color "status"]
  added = green       # 已暂存
  changed = yellow    # 已修改
  untracked = red     # 未跟踪
[core]
  editor = vim        # 编辑器（vim、code --wait 等）
  pager = less -FRSX  # 分页器设置
  autocrlf = input    # 换行符转换（input/mixed/true）
  safecrlf = warn     # 检查不一致的换行符
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  fileMode = false    # 在 Windows 上忽略文件权限变化
  excludesfile = ~/.gitignore_global  # 全局忽略文件
[merge]
  tool = meld         # 合并工具
  conflictstyle = diff3  # 冲突显示风格
[mergetool]
  prompt = false      # 不提示确认
  keepBackup = false  # 不保留备份文件
[diff]
  tool = meld         # 差异比较工具
[difftool]
  prompt = false      # 不提示确认
[branch]
#  autosetuprebase = always  # 自动使用 rebase 而非 merge
[push]
  default = current   # 推送到同名远程分支
[credential]
	# helper = store      # 明文存储（不安全但方便）
  # helper = cache --timeout=3600  # 缓存 1 小时
  # helper = wincred  # Windows 凭据管理器
  # helper = osxkeychain  # macOS 钥匙串
[http]
  sslVerify = true    # 验证 HTTPS 证书
	# proxy = http://user:pass@proxy.example.com:8080  # 设置代理
[core]
  compression = 0     # 0-9，0 表示不压缩，9 表示最高压缩率
  packedGitLimit = 512m
  packedGitWindowSize = 512m
[pack]
  deltaCacheSize = 2047m
  packSizeLimit = 2047m
  windowMemory = 2047m
